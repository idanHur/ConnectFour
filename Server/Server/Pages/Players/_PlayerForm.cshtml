@model GameManager.Models.Player

<div class="container-fluid mt-5">
    <form asp-action="Create" method="post" class="form-background mx-auto w-75">
        <div class="form-group">
            <label asp-for="Name">Player Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter player name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="PlayerId">ID</label>
            <input asp-for="PlayerId" class="form-control" placeholder="Enter ID">
            <span asp-validation-for="PlayerId" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Country"><strong>Country</strong></label>
            <select asp-for="Country" class="form-control" id="country"></select>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Password"><strong>Password</strong></label>
            <input asp-for="Password" class="form-control" placeholder="Enter password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
    </form>
</div>




<!-- Add scripts that are spacific to this page -->
<script src="~/js/playerForm.js"></script>
