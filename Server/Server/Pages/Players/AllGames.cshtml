@page
@model IEnumerable<Connect4Game.Game>

<h2>All Games</h2>

<table>
    <thead>
        <tr>
            <th>Game Id</th>
            <th>Game Status</th>
            <th>Start Time</th>
            <th>Player Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.gameId</td>
                <td>@game.gameStatus</td>
                <td>@game.startTime</td>
                <td>@game.playerId</td>
            </tr>
        }
    </tbody>
</table>
@{
}
