@page
@model GameManager.Player
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Pages/Shared/_Layout.cshtml";

}
<!-- Add styles that are spacific to this page -->
@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/Registration.css" />

}


<h2>@ViewData["Title"]</h2>


<div class="container-fluid mt-5">
    <form asp-action="YourAction" method="post" class="form-background mx-auto w-75">
        <div class="form-group">
            <label asp-for="playerName">Player Name</label>
            <input asp-for="playerName" class="form-control" placeholder="Enter player name">
            <span asp-validation-for="playerName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="id">ID</label>
            <input type="text" class="form-control" id="id" placeholder="Enter ID">
        </div>
        <div class="form-group mb-3">
            <label for="phoneNumber">Phone Number</label>
            <input type="tel" class="form-control" id="phoneNumber" placeholder="Enter phone number">
        </div>
        <div class="form-group mb-3">
            <label for="country"><strong>Country</strong></label>
            <select class="form-control" id="country"></select>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
    </form>
</div>





<!-- Add scripts that are spacific to this page -->
@section Scripts {
    <script src="~/js/Registration.js"></script>
}