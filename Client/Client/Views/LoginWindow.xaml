<Window x:Class="Client.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Center" Margin="0,270,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UserIdTextBox" HorizontalAlignment="Center" Margin="0,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Height="26"/>
        <Label x:Name="UserIdLabel" Content="User ID:" HorizontalAlignment="Left" Margin="237,165,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Height="26" Margin="0,211,0,0"/>
        <Label x:Name="PasswordLabel" Content="Password" HorizontalAlignment="Left" Margin="237,211,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
